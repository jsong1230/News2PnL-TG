# ============================================
# 텔레그램 봇 설정
# ============================================
# BotFather에서 발급받은 봇 토큰
# 예: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=your_bot_token_here

# 텔레그램 채널 ID 또는 개인 채팅 ID
# 채널 사용 시: -1001234567890 형태 (채널 정보에서 확인)
# 개인 채팅 사용 시: 숫자 ID (예: 123456789)
TELEGRAM_CHAT_ID=your_chat_id_here

# 텔레그램 전송 실패 시 워크플로우 실패 여부
# true: 전송 실패 시 워크플로우 실패
# false: 전송 실패 시 warning만 출력 (기본값, dry-run 모드)
TELEGRAM_REQUIRED=false


# 데이터 소스 설정 (선택사항)
NEWS_PROVIDER=dummy  # "dummy" 또는 "rss"
MARKET_PROVIDER=dummy  # "dummy" 또는 "yahoo"

# Google News RSS 검색 쿼리 (NEWS_PROVIDER=rss일 때 사용)
# 단일 쿼리 (하위 호환)
GOOGLE_NEWS_QUERY=한국 주식 시장
# 여러 쿼리 (권장, 더 많은 뉴스 수집)
GOOGLE_NEWS_QUERIES=미국 증시,나스닥,S&P500,연준 금리,달러 환율,유가,엔비디아,반도체,AI,비트코인,한국 증시,외국인 수급,삼성전자,SK하이닉스
# 쿼리별 최대 수집 개수
GOOGLE_NEWS_MAX_PER_QUERY=30

# 뉴스 시간 윈도우 모드
# "strict": 전날 18:00 ~ 오늘 08:00 KST (운영 모드, GitHub Actions 기본)
# "now": (now - NEWS_LOOKBACK_HOURS) ~ now KST (개발/디버그 모드, 로컬 테스트용)
NEWS_WINDOW_MODE=strict
# now 모드에서 lookback 시간 (시간 단위, 기본값 24)
NEWS_LOOKBACK_HOURS=24

# 관찰 리스트 (선택사항, 쉼표 구분)
WATCHLIST_KR=삼성전자,SK하이닉스,LG에너지솔루션

# 가정 투자 금액 (원)
PAPER_TRADE_AMOUNT=10000000

# 월간 리포트 설정 (개발용)
MONTH_OVERRIDE=  # 특정 월 리포트 생성 (YYYY-MM 형식, 예: 2025-12)
MONTHLY_INCLUDE_DUMMY=false  # 월간 리포트에 dummy provider 거래 포함 여부

# 텔레그램 전송 실패 시 워크플로우 실패 여부
TELEGRAM_REQUIRED=false  # true면 전송 실패 시 워크플로우 실패, false면 warning만

# LLM 설정 (OpenAI, 관찰 종목 선정용)
LLM_ENABLED=false  # LLM 사용 여부
OPENAI_API_KEY=  # OpenAI API 키 (LLM_ENABLED=true일 때 필요)
LLM_MODEL=gpt-4o-mini  # LLM 모델명 (기본값: gpt-4o-mini)
LLM_TEMPERATURE=0.2  # 온도 (0.0~1.0, 낮을수록 일관성 높음)
LLM_MAX_TOKENS=800  # 최대 토큰 수
LLM_DAILY_BUDGET_TOKENS=20000  # 일일 토큰 예산 (초과 시 자동 비활성화)
