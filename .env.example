# 텔레그램 봇 설정
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# 데이터 소스 설정 (선택사항)
NEWS_PROVIDER=dummy  # "dummy" 또는 "rss"
MARKET_PROVIDER=dummy

# Google News RSS 검색 쿼리 (NEWS_PROVIDER=rss일 때 사용)
# 단일 쿼리 (하위 호환)
GOOGLE_NEWS_QUERY=한국 주식 시장
# 여러 쿼리 (권장, 더 많은 뉴스 수집)
GOOGLE_NEWS_QUERIES=미국 증시,나스닥,S&P500,연준 금리,달러 환율,유가,엔비디아,반도체,AI,비트코인,한국 증시,외국인 수급,삼성전자,SK하이닉스
# 쿼리별 최대 수집 개수
GOOGLE_NEWS_MAX_PER_QUERY=30

# 뉴스 시간 윈도우 모드
# "strict": 전날 18:00 ~ 오늘 08:00 KST (운영 모드, GitHub Actions 기본)
# "now": (now - NEWS_LOOKBACK_HOURS) ~ now KST (개발/디버그 모드, 로컬 테스트용)
NEWS_WINDOW_MODE=strict
# now 모드에서 lookback 시간 (시간 단위, 기본값 24)
NEWS_LOOKBACK_HOURS=24

# 관찰 리스트 (선택사항, 쉼표 구분)
WATCHLIST_KR=삼성전자,SK하이닉스,LG에너지솔루션

# 가정 투자 금액 (원)
PAPER_TRADE_AMOUNT=10000000
